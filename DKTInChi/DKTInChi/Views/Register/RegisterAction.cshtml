@using DKTInChi.Models;
@using PagedList;
@using PagedList.Mvc;
@model DKTInChi.Models.ViewModel
@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Đăng ký</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding" style="">
                    <table class="table table-hover">
                        <tr>
                            <th>Mã Học Phần</th>
                            <th>Tên Học Phần</th>
                            <th>Số tín chỉ</th>
                            <th>Tổng số tiết</th>
                            <th>Chức năng</th>
                        </tr>

                        @foreach (var sb in Model.list_sub)
                        {
                            <tr>
                                <td>@sb.code</td>
                                <td>@sb.name</td>
                                <td>@sb.numbercredit</td>
                                <td>@sb.theory</td>
                                <td>@Html.ActionLink("Đăng ký", "Register", null, new { id = "id", value = @sb.code.ToString() })</td>
                            </tr>
                        }

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</div>
<div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Các môn đã đăng ký</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding" style="">
                    <table class="table table-hover">
                        <tr>
                            <th>Mã Học Phần</th>
                            <th>Tên Học Phần</th>
                            <th>Số tín chỉ</th>
                            <th>Tổng số tiết</th>
                            <th>Hủy</th>
                        </tr>
                        @foreach (var sb in Model.list_registered)
                        {
                            <tr>
                                <td>@sb.code</td>
                                <td>@sb.name</td>
                                <td>@sb.numbercredit</td>
                                <td>@sb.theory</td>
                                <td><a href="#"><i class="fas fa-times"></i></a></td>
                            </tr>
                        }

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</div>


